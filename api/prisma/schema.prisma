generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Steps {
  business_redirect
  contact_reason
  place_order_pizza
  place_order_burger
  place_oder_fihass
  report_problem
  finished
}

model Business {
  id           String  @id @default(cuid())
  name         String
  phone        String?
  openedTicket Chat[]
}

model Customer {
  id    String  @id
  name  String?
  phone String  @unique
  chats Chat[]
}

model Chat {
  id String @id @default(cuid())

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  isActive    Boolean @default(true)
  currentStep String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  business   Business? @relation(fields: [businessId], references: [id])
  businessId String?
}
